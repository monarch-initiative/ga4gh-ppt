<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1000.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.monarchinitiative.ga4ghppt.controller.MainWindowController">
    <top>
        <MenuBar prefHeight="23.0" prefWidth="1200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem fx:id="newMenuItem" mnemonicParsing="false" text="Open" />
                <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#exitGui" text="Exit" />
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem fx:id="optionsMenuItem" mnemonicParsing="false" onAction="#optionsAction" text="Options" />
                <MenuItem fx:id="showVersionsMenuItem" mnemonicParsing="false" onAction="#showVersionsAction" text="Show version" />
            </Menu>
            <Menu fx:id="templatesMenu" mnemonicParsing="false" text="Templates" />
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About" />
            </Menu>
        </MenuBar>
    </top>
    <left>
        <Label fx:id="LEFT">LEFT REPLACE ME...</Label>
    </left>
    <bottom>
        <VBox fx:id="statusBar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Label fx:id="statusBarLabel">Starting...</Label>
        </VBox>
    </bottom>
   <center>
      <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER" />
   </center>


</BorderPane>
